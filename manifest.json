{
        "name": "Uribbble",
        "description": "Drop comments just with a click on Dribbble",
        "version": "1.0",
        "manifest_version": 2,
        "content_scripts": [
                {
                        "matches": ["https://dribbble.com/*"],
                        "css": ["style.css"],
                        "js": ["content.js"]
                }
        ],
        "icons": {
                "16": "icons/uribbble_16.png",
                "48": "icons/uribbble_48.png",
                "128": "icons/uribbble_64.png"
        },
        "permissions": ["tabs"]
}
